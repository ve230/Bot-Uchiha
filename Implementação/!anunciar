module.exports = {
    name: "anunciar",
    execute: async (sock, msg, args) => {
        if (!config.vipUsers.includes(msg.key.participant)) return sock.sendMessage(msg.key.remoteJid, { text: "‚ùå Apenas VIP/Admin" });
        const texto = args.join(" ");
        if (!texto) return sock.sendMessage(msg.key.remoteJid, { text: "Use: !anunciar <mensagem>" });

        const grupos = Object.keys(sock.chats || {}).filter(j => j.endsWith("@g.us"));
        for (const g of grupos) {
            await sock.sendMessage(g, { text: texto });
        }
    }
};