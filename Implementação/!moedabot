let moedas = {};

module.exports = {
    name: "moedabot",
    execute: async (sock, msg, args) => {
        const jid = msg.key.participant || msg.key.remoteJid;
        moedas[jid] = moedas[jid] || 0;
        await sock.sendMessage(msg.key.remoteJid, { text: `ğŸ’° VocÃª tem ${moedas[jid]} moedas.` });
    }
};

module.exports.addMoeda = (jid, quantidade) => {
    moedas[jid] = (moedas[jid] || 0) + quantidade;
};