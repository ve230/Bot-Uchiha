module.exports = {
    name: "historia",
    execute: async (sock, msg, args) => {
        const jid = msg.key.remoteJid;
        const tema = args.join(" ") || "aventura";
        const apiKey = process.env.OPENAI_API_KEY;

        const resp = await fetch("https://api.openai.com/v1/chat/completions", {
            method: "POST",
            headers: { "Authorization": `Bearer ${apiKey}`, "Content-Type": "application/json" },
            body: JSON.stringify({
                model: "gpt-4o-mini",
                messages: [{ role: "user", content: `Crie uma história curta sobre ${tema}` }]
            })
        });

        const data = await resp.json();
        const historia = data.choices?.[0]?.message?.content || "Não consegui criar uma história.";
        await sock.sendMessage(jid, { text: historia });
    }
};