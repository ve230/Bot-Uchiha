module.exports = {
    name: "sorteio",
    execute: async (sock, msg) => {
        const jid = msg.key.remoteJid;
        try {
            const metadata = await sock.groupMetadata(jid);
            const participants = metadata.participants.map(p => p.id);
            const sorteado = participants[Math.floor(Math.random() * participants.length)];
            await sock.sendMessage(jid, { text: `ğŸ‰ O participante sorteado Ã©: @${sorteado.split("@")[0]}`, mentions: [sorteado] });
        } catch {
            await sock.sendMessage(jid, { text: "âŒ Falha ao realizar sorteio." });
        }
    }
};