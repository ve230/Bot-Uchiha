let jogosNumero = {};

module.exports = {
    name: "adivinhe",
    execute: async (sock, msg) => {
        const jid = msg.key.remoteJid;
        const numero = Math.floor(Math.random()*50)+1;
        jogosNumero[jid] = numero;

        await sock.sendMessage(jid, { text: "ðŸ”¢ Adivinhe um nÃºmero entre 1 e 50! Use !numero <seu chute>" });
    }
};

module.exports.numero = async (sock, msg, args) => {
    const jid = msg.key.remoteJid;
    const chute = parseInt(args[0]);
    if (!jogosNumero[jid]) return;

    if (chute === jogosNumero[jid]) {
        await sock.sendMessage(jid, { text: "ðŸŽ‰ Acertou!" });
        delete jogosNumero[jid];
    } else if (chute < jogosNumero[jid]) {
        await sock.sendMessage(jid, { text: "â¬†ï¸ Maior!" });
    } else {
        await sock.sendMessage(jid, { text: "â¬‡ï¸ Menor!" });
    }
};