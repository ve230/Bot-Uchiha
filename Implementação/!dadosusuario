module.exports = {
    name: "dadosusuario",
    execute: async (sock, msg, args) => {
        const jid = args[0] ? args[0].replace("@","") + "@s.whatsapp.net" : msg.key.participant;
        try {
            const vCard = await sock.onWhatsApp(jid);
            const texto = `ğŸ“Œ NÃºmero: ${jid}\nâœ… UsuÃ¡rio WhatsApp: ${vCard ? "Existe" : "NÃ£o encontrado"}`;
            await sock.sendMessage(msg.key.remoteJid, { text: texto });
        } catch {
            await sock.sendMessage(msg.key.remoteJid, { text: "âŒ NÃ£o foi possÃ­vel obter informaÃ§Ãµes do usuÃ¡rio." });
        }
    }
};